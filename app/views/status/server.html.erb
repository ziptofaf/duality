<h1>Servers status</h1>

<table class = "table table-bordered table-striped">
  <thead>
    <tr>
      <td>Server</td>
      <td>Status</td>
    </tr>
  </thead>
  <tbody>
  <% @servers.each do |server| %>
  <tr>
  <td><%= server.location %></td><td><%= server.status %></td>
  </tr>
  <% end %>
</tbody>
</table>
