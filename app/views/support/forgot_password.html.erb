<div class="center hero-unit">
<h1> Recover password</h1>
<div class="col-md-4 center">

<% if flash[:notice] %>
<div class="alert alert-notice"><%= flash[:notice] %></div>
<% end %>
<% if flash[:error] %>
<div class="alert alert-error"><%= flash[:error] %></div>
<% end %>
<%= form_for(:recovery, url: support_password_reset_path) do |f| %>
<div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, :class => 'form-control center' %>
</div><div class="form-group">
      <%= f.label :answer, "Type only LETTERS (in order from left to right) from the following: 23ab44bz7x" %>
      <%= f.text_field :answer, :class => 'form-control center' %>
</div>
      <%= f.submit "Send e-mail", :class => 'btn btn-default' %>
    <% end %></div>
</div>
</div>


